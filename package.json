    "classnames": "^2.5.1",
    "codemirror": "^6.0.1"
  },
  "devDependencies": {
    "@hankliu/hankliu-ui": "^0.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@types/classnames": "^2.3.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "@umijs/fabric": "^4.0.1",
    "babel-plugin-import": "^1.13.8",
    "cross-env": "^7.0.3",
    "dumi": "^2.2.17",
    "eslint": "^9.4.0",
    "father": "^4.4.0",
    "glob": "^10.3.12",
    "less": "^4.2.0",
    "np": "^10.0.3",
    "rc-test": "^7.0.15",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.4.5"
  }
